class StatusMessages extends React.Component {
	componentDidMount() {
		var notify = document.getElementById('messages');
		var messageText = document.getElementById('message-positioning');

		if(this.props.notification[0] != null && this.props.notification[1] != null) {
			notify.style.background = "red";

			setTimeout(function() {
				messageText.classList.toggle('fade');
			}, 1800);

			setTimeout(function() {
				notify.className = 'disappear';
			}, 9000);
		}
	}
	render() {
		return (
			<div id="messages">
				<p id="message-positioning">{this.props.notification[1]}</p>
			</div>
		)
	}
}
